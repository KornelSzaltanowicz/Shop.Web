<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Ksiegarnia Internetowa</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="@Url.Content("~/Content/fonts/font-awesome-4.6.3/css/font-awesome.min.css")" rel="stylesheet" />
</head>
<body ng-app="shopApp">
    <div class="container-fluid">
        <div class="row" style="margin-top: 100px">
            <div class="col-md-10 col-md-offset-1">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <nav class="navbar navbar-inverse">
                            <div class="container-fluid">
                                <!-- Brand and toggle get grouped for better mobile display -->
                                <div class="navbar-header">
                                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                                        <span class="sr-only">Toggle navigation</span>
                                        <span class="icon-bar"></span>
                                        <span class="icon-bar"></span>
                                        <span class="icon-bar"></span>
                                    </button>
                                    <h3>Księgarnia Internetowa</h3><br />
                                    <p style="margin-top: -30px;font-size: 0.8em;">Nasze sklepy prowadzimy z pasją!</p>
                                </div>

                                <!-- Collect the nav links, forms, and other content for toggling -->
                                <div class="collapse navbar-collapse">
                                    <form class="navbar-form navbar-left" role="search">
                                        <div class="form-group">
                                            <input type="text" class="form-control" placeholder="Wyszukiwarka">
                                        </div>
                                        <button type="submit" class="btn btn-default">Szukaj</button>
                                    </form>
                                    <button type="button" class="btn btn-default navbar-btn navbar-right">Liczba produktów <span class="badge">4</span></button>

                                </div><!-- /.navbar-collapse -->
                            </div><!-- /.container-fluid -->
                        </nav>
                    </div>
                    <div class="panel-body">
                        @Html.Partial("_NavigationPartial")
                        @RenderBody()
                        @Html.Partial("_ModalPartial")
                    </div>
                </div>
            </div>
        </div>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("/bundles/angular")
    <script src="~/Scripts/app/app.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("Scripts", required: false)
</body>
</html>
